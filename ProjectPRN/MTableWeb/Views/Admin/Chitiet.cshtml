@using MTableWeb.Models;
@{
    Order or = ViewBag.or;
}


<html>
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <div>
            <nav class="navbar bg-body-tertiary">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/Admin/QLOrder">Quan ly dat ban</a>
                    <a class="navbar-brand" href="/Admin/QLTK">Quan ly tai khoan</a>
                    <a class="navbar-brand" href="/Home/Thoat">Thoat</a>
                </div>
            </nav>

        </div>
        <div>
           


            <form method="post" action="/Admin/Confirm">
                <h2>Xac nhan thong tin dat ban</h2>
                <input type="text" value="@or.Id" hidden name="id" />
                 @using (var context = new MTableContext())
                {
                    Information ig = context.Information.FirstOrDefault(x => x.Id == or.UserOrder);
                    Table t = context.Tables.FirstOrDefault(x => x.Id == or.TableId);
                <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">Nguoi dat ban</label>
                    <input type="text" value="@ig.FullName"   id="disabledSelect" class="form-select" />
                </div>
                <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">Email</label>
                        <input type="text" value="@ig.Email" id="disabledSelect" class="form-select" />
                </div>
                    <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">So dien thoai</label>
                        <input type="text" value="@ig.Phone" id="disabledSelect" class="form-select" />
                    </div>
                    <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">Ngay dat</label>
                        <input type="text" value="@or.TimeOrder - @or.DateOrder.Value.ToString("dd-MM-yyyy")" id="disabledSelect" class="form-select" />
                    </div>
                    <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">Ban dat</label>
                        <input type="text" value="@t.Name" id="disabledSelect" class="form-select" />
                    </div>
                    <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">Ghi chu cua khach hang</label>
                        <input type="text" value="@or.NoteUser" id="disabledSelect" class="form-select" />
                    </div>
                    <div class="mb-3">
                        <label for="disabledTextInput" class="form-label">Ghi chu cua nhan vien</label>
                        <input type="text" value="" name="note" id="disabledSelect" class="form-select" />
                    </div>
                    
                
                }
                <input  class="btn btn-primary" type="submit" value="Xac nhan" name="btn1" />
                <input  class="btn btn-danger" type="submit" value="Tu choi" name="btn2" />

            </form>
        </div>
       

    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>